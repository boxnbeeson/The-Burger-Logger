<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{>  devourButton devoured=1}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Here is a line to fix</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> devourButton devoured=0}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
